<div class="navbar">
    <a href="/" class="home"><%= __("home") %></a>

    <% if (user.authenticated) { %>
        <p><a href="/notifications"><%= __("notifications") %><%= user.notificationAmount %></a></p>

        <div class="user-info">
            <p class="username"><img src="<%= user.avatar %>" /><span class="text"><%= user.displayName %></span></p>

            <div class="user-actions">
                <a class="profile-link" href="/@<%= user.username %>"><%= __("profile") %></a>
                <a class="dashboard-link" href="/dashboard"><%= __("dashboard") %></a>
                <a class="settings-link" href="/settings"><%= __("settings") %></a>
                <a class="logout-link" href="/logout"><%= __("logout") %></a>
            </div>
        </div>
    <% } else { %>
            <div class="user-info">
                <a href="/register"><%= __("register") %></a>
                <a href="/login"><%= __("login") %></a>
            </div>
    <% } %>
</div>